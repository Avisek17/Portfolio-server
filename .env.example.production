NODE_ENV=production
PORT=5001

# MongoDB Atlas (choose ONE of the two approaches below)
# 1) Full URI
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster-host>/<database>?retryWrites=true&w=majority&appName=<AppName>
# 2) Discrete parts (preferred to avoid embedding password in logs)
# MONGODB_USER=<username>
# MONGODB_PASSWORD=<password>
# MONGODB_HOST=<cluster-host>
# MONGODB_DB=<database>
# MONGODB_APPNAME=Portfolio
# MONGODB_SUPPRESS_URI_WARNING=true
# MONGODB_AUTHSOURCE=admin  # Only if user created in a DB other than default
# NOTE: If password has special chars (@:/?#&=) it will be URL-encoded automatically when constructed.

# Auth
JWT_SECRET=REPLACE_WITH_64_CHAR_RANDOM
JWT_EXPIRE=7d

# Initial Admin (remove after first run or rotate)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=CHANGE_ME_SOON
ADMIN_EMAIL=admin@example.com
# ADMIN_SHOW_PASSWORD=false

# Security feature toggles
# CSP_STRICT=false
# ENABLE_HSTS=false

# CORS (production domains only)
FRONTEND_URLS=https://avisekdulal.com.np,https://www.avisekdulal.com.np

# Optional
# RATE_LIMIT_MAX=120
# LOG_FORMAT=combined
