NODE_ENV=production
PORT=5001

# MongoDB Atlas
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster-host>/<database>?retryWrites=true&w=majority&appName=<AppName>

# Auth
JWT_SECRET=REPLACE_WITH_64_CHAR_RANDOM
JWT_EXPIRE=7d

# Initial Admin (remove after first run or rotate)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=CHANGE_ME_SOON
ADMIN_EMAIL=admin@example.com
# Optional: Set to true ONLY for first seed if you want the provided password echoed
# ADMIN_SHOW_PASSWORD=false

# Security feature toggles
# When all inline styles/scripts removed, enable stricter CSP (removes 'unsafe-inline')
# CSP_STRICT=false
# After HTTPS verified working, enable HSTS to enforce secure transport
# ENABLE_HSTS=false

# CORS (production domains only; do NOT include localhost in final deployed file)
FRONTEND_URLS=https://avisekdulal.com.np,https://www.avisekdulal.com.np

# Optional
# RATE_LIMIT_MAX=120
# LOG_FORMAT=combined
